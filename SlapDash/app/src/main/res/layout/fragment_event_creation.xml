<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#f1f1ee"
    tools:context=".EventCreation_Fragment.EventCreationFragment">
    <Button
        android:id ="@+id/btn_food"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="bottom"
        android:drawableTop="@drawable/burger_64"
        android:background="@drawable/button_bg_round"
        android:gravity="center"
        android:layout_alignTop="@+id/btn_drink"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id ="@+id/btn_drink"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:drawableTop="@drawable/drink_64"
        android:background="@drawable/button_bg_round"
        android:gravity="center"
        android:layout_alignTop="@+id/btn_play"
        android:layout_toRightOf="@+id/btn_food"
        android:layout_toEndOf="@+id/btn_food" />

    <Button
        android:id ="@+id/btn_play"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:drawableTop="@drawable/play_64"
        android:background="@drawable/button_bg_round"
        android:gravity="center"
        android:layout_alignTop="@+id/btn_random"
        android:layout_toLeftOf="@+id/btn_random"
        android:layout_toStartOf="@+id/btn_random" />

    <Button
        android:id ="@+id/btn_random"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="bottom"
        android:drawableTop="@drawable/random_64"
        android:background="@drawable/button_bg_round"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgvEventSelection"
        android:src="@drawable/burger_480"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btn_food" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Create Event"
        android:textStyle="italic|bold"
        android:textSize="25dp"
        android:id="@+id/btnCreateEvent"
        android:background="@drawable/button_rounded_rectangle"
        android:layout_below="@+id/btn_food"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="76dp" />

</RelativeLayout>
